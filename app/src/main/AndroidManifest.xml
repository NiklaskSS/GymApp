<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GymApp"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- History Activity Declaration -->
        <activity
            android:name=".HistoryActivity"
            android:label="Workout History"
            android:parentActivityName=".MainActivity"
            android:exported="false" />

        <!-- Credits Activity Declaration -->
        <activity
            android:name=".CreditsActivity"
            android:label="Credits"
            android:parentActivityName=".MainActivity"
            android:exported="false" />

        <!-- ADDED Program Activities -->
        <activity
            android:name=".ProgramsActivity"
            android:label="Workout Programs"
            android:parentActivityName=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ProgramDetailActivity"
            android:parentActivityName=".ProgramsActivity"
            android:exported="false" />

    </application>

</manifest>
